@model IEnumerable<TicketsCartViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TicketName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketName)
                    </td>
                    <td>
                        <form method="post" asp-action="ChangeCount" class="form-inline">
                            <input hidden name="id" value="@item.TicketId" />
                            <input hidden name="count" value="@(item.Count - 1)" />
                            <button type="submit" class="btn btn-light">-</button>
                        </form>
                        @Html.DisplayFor(modelItem => item.Count)
                        <form method="post" asp-action="ChangeCount" class="form-inline">
                            <input hidden name="id" value="@item.TicketId" />
                            <input hidden name="count" value="@(item.Count + 1)" />
                            <button type="submit" class="btn btn-light">+</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
        <td colspan="2">Cart is empty</td>
        }
    </tbody>
</table>