@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model EventsViewModel

<h1>@localizer["Events"]</h1>

<div class="container-fluid">
    <div class="form-group col-sm-2">
        Categories
        <select asp-for="@Model.EventsCategories[0].Id" class="form-control" asp-items="@ViewBag.EventsCategories"></select>
        @Html.ActionLink("Submit", "Index", "Events", new { eventId = 1 }, new { @class = "btn btn-primary" })
    </div>
    <p> </p>
    <div class="row row-cols-2">
        @foreach (var eventObj in Model.Events)
        {
            <div class="col-sm-6">
                <div class="card text-center">
                    <img src="~/img/@eventObj.Banner" alt="@eventObj.Name" class="card-img-top img-fluid" />
                    <div class="card-body">
                        <h4><strong>@eventObj.Name</strong></h4>
                        <h4><strong>@Model.Cities.Where(c => c.Id == Model.Venues.Where(p => p.Id == eventObj.VenueId).Select(p => p.CityId).FirstOrDefault()).Select(c => c.Name).FirstOrDefault()</strong></h4>
                        <h4>@localizer["Venue:"] @Model.Venues.Where(p => p.Id == eventObj.VenueId).Select(p => p.Name).FirstOrDefault()</h4>
                        <p><strong>@eventObj.Date.ToShortDateString()</strong></p>
                        <p class="text-justify">@Html.Raw(@eventObj.Description)</p>
                        @Html.ActionLink(localizer["Buy ticket"].Value, "GetEventTickets", "Tickets", new { eventId = eventObj.Id }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>

        }
    </div>
</div>


