@model EventsViewModel

@{
    ViewData["Title"] = "Venues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Venues</h1>
    <ul class="nav nav-tabs bg-dark">
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Index">
                Back
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Create">
                Create new
            </a>
        </li>
    </ul>
<table class="table bg-dark text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Venues[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venues[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venues[0].City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Venues) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Model.Cities.Where(c => c.Id == item.CityId).Select(c => c.Name).FirstOrDefault()
            </td>
            <td>
                <ul class="nav flex-column bg-dark">
                    <li class="nav-item bg-primary">
                        <a class="nav-link text-light" asp-action="Edit">
                            Edit
                        </a>
                    </li>
                    <li class="nav-item bg-danger">
                        <a class="nav-link text-light" asp-action="Delete">
                            Delete
                        </a>
                    </li>
                </ul>
            </td>
        </tr>
}
    </tbody>
</table>
