@model TicketsResale.Business.Models.City

@{
    ViewData["Title"] = "Create City";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateCity</h1>

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <ul class="nav nav-tabs flex-column bg-dark">
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Cities">
                Back
            </a>
        </li>
    </ul>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
