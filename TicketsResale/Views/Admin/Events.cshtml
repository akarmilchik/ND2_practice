@model IEnumerable<TicketsResale.Business.Models.Event>

@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Events</h1>
    <ul class="nav nav-tabs bg-dark">
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Index">
                Back
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Create">
                Create new
            </a>
        </li>
    </ul>
<table class="table bg-dark text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th>
            <th> 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.Date.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue.Id)
            </td>
            <td>
                <img src="~/img/@item.Banner" alt="@item.Name" class="card-img-top img-fluid" />
            </td>
            <td>
                @Html.Raw(item.Description)
            </td>
            <td>
                <ul class="nav flex-column bg-dark">
                    <li class="nav-item bg-primary">
                        <a class="nav-link text-light" asp-action="Edit">
                            Edit
                        </a>
                    </li>
                    <li class="nav-item bg-danger">
                        <a class="nav-link text-light" asp-action="Delete">
                            Delete
                        </a>
                    </li>
                </ul>
            </td>
        </tr>
}
    </tbody>
</table>
