@model IEnumerable<TicketsResale.Business.Models.City>

@{
    ViewData["Title"] = "Cities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cities</h1>
<ul class="nav nav-tabs bg-dark">
    <li class="nav-item">
        <a class="nav-link text-light" asp-action="Index">
            Back
        </a>
    </li>
    <li class="nav-item">

        <a class="nav-link text-light" asp-action="CreateCity">
            Create new
        </a>
    </li>
</ul>
<table class="table bg-dark text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                
                <td>
                    <ul class="nav d-sm-flex float-right bg-dark">
                        <li class="nav-item bg-primary">
                            <a class="nav-link text-light" asp-action="EditCity">
                                Edit
                            </a>
                            @Html.ActionLink("Edit", "EditCity", "Admin", new { name = @item.Name }, new { @class = "btn btn-primary" })
                        </li>
                        <li class="nav-item bg-danger">
                            <a class="nav-link text-light" asp-action="DeleteCity">
                                Delete
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
