@model TicketsResale.Models.TicketCreateEditModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTicket">
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label asp-for="Event" class="control-label"></label>
                <select asp-for="@Model.Event.Id" class="form-control" asp-items="@ViewBag.Events"></select>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <input type="submit" value="Back" class="btn btn-primary" asp-controller="Tickets" asp-action="MyTickets" asp-route-ticketStatus="1" asp-route-userName="@User.Identity.Name"/>
            </div>
        </form>
    </div>
</div>

