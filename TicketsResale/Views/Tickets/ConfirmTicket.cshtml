@model ConfirmRejectTicketViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer


@{
    ViewData["Title"] = "Confirmation of ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@localizer["Confirmation of ticket"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmTicket">
            <div class="form-group">
                <b>@localizer["Name"]</b> <br>
                @Model.Ticket.Event.Name
            </div>
            <div class="form-group">
                <b>@localizer["Price"]</b><br>
                @Model.Ticket.Price
            </div>
            <div class="form-group">
                @localizer["Confirm or reject ticket"] <input style="" asp-for="@Model.Confirmation" class="form-control" />
                <small>@localizer["textReject"]</small>

            </div>
            <div class="form-group">
                <small>@localizer["textReason"]</small>
                <input asp-for="@Model.TrackNumber" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="@localizer["Save"]" class="btn btn-success" asp-route-ticketId="@Model.Ticket.Id" />
                <input type="submit" value="@localizer["Back"]" class="btn btn-primary" asp-controller="Tickets" asp-action="MyTickets" asp-route-ticketStatus="1" asp-route-userName="@User.Identity.Name" />
            </div>
        </form>
    </div>
</div>

