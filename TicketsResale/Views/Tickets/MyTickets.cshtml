@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model MyTicketsViewModel
<header>
    <div>
        <h1>@localizer["My tickets"]</h1>
    </div>
    <ul class="nav nav-tabs justify-content-center">
        <li class="nav-item bg-dark text-light">
            <a class="nav-link bg-dark text-light" asp-area="" asp-controller="Tickets" asp-action="MyTickets" asp-route-status="1">Selling</a>
        </li>
        <li class="nav-item bg-dark text-light">
            <a class="nav-link bg-dark text-light" asp-area="" asp-controller="Tickets" asp-action="MyTickets" asp-route-status="2">Waiting Confirmation</a>
        </li>
        <li class="nav-item bg-dark text-light">
            <a class="nav-link bg-dark text-light" asp-area="" asp-controller="Tickets" asp-action="MyTickets" asp-route-status="3">Sold</a>
        </li>
    </ul>
</header>
<p></p>
<div class="form-group">
    <input type="submit" value="Create ticket" class="btn btn-primary" asp-controller="Tickets" asp-action="CreateTicket" />
</div>
<table class="table bg-dark text-light">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                Name
            </th>
            <th>
                Date
            </th>
            <th>
                Date
            </th>
            <th>
                Price
            </th>
            <th>
                Seller
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model.Tickets)
        {
            <tr>
                <td>
                    <img src="~/img/ticket.jpg" alt="Ticket" class="card-img-top" />
                </td>
                <td>
                    @Model.Events.Where(e => e.Id == ticket.EventId).Select(e => e.Name).FirstOrDefault()
                </td>
                <td>
                    @ticket.Event.Date.Date.ToShortDateString()
                </td>
                <td>
                    @Model.Events.Where(e => e.Id == ticket.EventId).Select(e => e.Date.Date).FirstOrDefault()
                </td>
                <td>
                    $@ticket.Price
                </td>
                <td>
                    Seller: @Model.Users.Where(u => u.Id == ticket.SellerId.ToString()).Select(u => u.FirstName).FirstOrDefault() @Model.Users.Where(u => u.Id == ticket.SellerId.ToString()).Select(u => u.LastName).FirstOrDefault()
                </td>
                <td>
                    <ul class="nav flex-column bg-dark">
                        <li class="nav-item bg-primary">
                            <a class="nav-link text-light" asp-action="Confirm" asp-controller="Tickets">
                                Confirm
                            </a>
                        </li>
                        <li class="nav-item bg-danger">
                            <a class="nav-link text-light" asp-action="Delete" asp-controller="Tickets">
                                Reject
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
