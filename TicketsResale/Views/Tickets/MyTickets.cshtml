@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model ShopViewModel
<header>
    <div>
        <h1>@localizer["My tickets"]</h1>
    </div>
    <ul class="nav nav-tabs justify-content-center">
        <li class="nav-item bg-dark text-light">
            <a class="nav-link bg-dark text-light" asp-area="" asp-controller="Tickets" asp-action="MyTickets" asp-route-status="selling" asp-route-userName="@User.Identity.Name">@localizer["Selling"]</a>
        </li>
        <li class="nav-item bg-dark text-light">
            <a class="nav-link bg-dark text-light" asp-area="" asp-controller="Tickets" asp-action="MyTickets" asp-route-status="waiting" asp-route-userName="@User.Identity.Name">@localizer["Waiting Confirmation"]</a>
        </li>
        <li class="nav-item bg-dark text-light">
            <a class="nav-link bg-dark text-light" asp-area="" asp-controller="Tickets" asp-action="MyTickets" asp-route-status="sold" asp-route-userName="@User.Identity.Name">@localizer["Sold"]</a>
        </li>
    </ul>
</header>
<p></p>
<div class="container-fluid">
    <div class="row row-cols-2">
        @foreach (var ticket in Model.Tickets)
        {
            <div class="col-sm-4">
                <div class="card text-center">
                    <img src="~/img/ticket.jpg" height="30" class="card-img-top img-fluid" />
                    <div class="card-body">
                        <h4><strong>@Model.Events.Where(e => e.Id == ticket.EventId).Select(e => e.Name).FirstOrDefault()</strong></h4>
                        <p>@ticket.Event.Date.Date.ToShortDateString()</p>
                        <p>@Model.Events.Where(e => e.Id == ticket.EventId).Select(e => e.Date.Date).FirstOrDefault()</p>
                        <p>$@ticket.Price</p>
                        <p>@localizer["Seller:"] @Model.Users.Where(u => u.Id == ticket.SellerId.ToString()).Select(u => u.FirstName).FirstOrDefault() @Model.Users.Where(u => u.Id == ticket.SellerId.ToString()).Select(u => u.LastName).FirstOrDefault()</p>

                        @Html.ActionLink("Edit", "Edit", "Ticket", new { id = ticket.Id }, new { @class = "btn btn-secondary" })
                        @Html.ActionLink("Delete", "Delete", "Ticket", new { id = ticket.Id }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>

