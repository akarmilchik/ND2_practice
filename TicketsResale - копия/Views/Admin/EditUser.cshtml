@model UsersRolesViewModel
@{
    ViewData["Title"] = "Edit user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Edit user</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser" asp-controller="Admin" asp-route-id="@Model.UserId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.UserId" />
            <div class="form-group">
                <label asp-for="@Model.User.UserName" class="control-label"></label>
                <input asp-for="@Model.User.UserName" class="form-control" />
                <span asp-validation-for="@Model.User.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Role" class="control-label"></label>
                <select asp-for="@Model.Role.Id" class="form-control" asp-items="@ViewBag.Roles"></select>
                <span asp-validation-for="@Model.Role.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <input type="submit" value="Back" class="btn btn-primary" asp-action="Users" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
